<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stillfly.myimproveproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.MyService" />

        <activity android:name=".services.ServiceActivity" />

        <service
            android:name=".services.BindService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.intentservice.IntentDemoService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".services.BindServiceActivity" />
        <activity android:name=".services.BindService2Activity" />
        <activity android:name=".services.BindService3Activity" />
        <activity android:name=".services.ServiceMixActivity" />
        <activity android:name=".services.IntentServiceActivity"></activity>
    </application>

</manifest>